<h1>Eat The Burger</h1>
<h2>Ready to Eat</h2>

{{#each items}}
    {{#if devoured}}
    {{else}}
        <p>{{burger_name}} <button info={{id}} class="devourBTN">Eat This Burger</button></p>
    {{/if}}
{{/each}}

<h2>Has Been Devoured</h2>

{{#each items}}
    {{#if devoured}}
       <p> {{burger_name}} </p>
    {{else}}
    {{/if}}
{{/each}}

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Shit was bomb!<br>
    <input type="radio" name="devoured" value="0"> Saving it
  </div>

  <button type="submit">Add Burger</button>
</form>


<script>
    $(".devourBTN").on("click", function(){
        var id = $(this).attr("info")
        console.log(id)
        $.get(`/devour-burger/${id}`, function(response){
            console.log(response)
            location.reload()
        })
    })
</script>